<?xml version="1.0"?>
<rolemap>
  <roles>
    <role name="Customer"/>
    <role name="Vendor"/>
    <role name="Shop Admin"/>
  </roles>

  <permissions>

    <permission name="bda.plone.orders: View Orders" acquire="True">
      <role name="Manager" />
      <role name="Shop Admin" />
      <role name="Vendor" />
      <role name="Customer" />
    </permission>

    <permission name="bda.plone.orders: All Orders" acquire="True">
      <role name="Manager" />
      <role name="Shop Admin" />
    </permission>

    <permission name="bda.plone.orders: Vendor Orders" acquire="True">
      <role name="Manager" />
      <role name="Shop Admin" />
      <role name="Vendor" />
    </permission>

    <permission name="bda.plone.orders: Customer Orders" acquire="True">
      <role name="Manager" />
      <role name="Shop Admin" />
      <role name="Vendor" />
      <role name="Customer" />
    </permission>

  </permissions>
</rolemap>
